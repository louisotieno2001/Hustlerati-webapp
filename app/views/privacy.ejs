<!-- views/blogs.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy | Hustlerati</title>
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="icon" href="/images/logo1.png" type="image/x-icon">
    <style>
        #area {
            top: 0;
            padding-left: 20px;
            padding-right: 20px;
            height: 100vh;
            background: #4e342e;
        }

        h2 {
            color: aliceblue;
            background-color: #616161;
            border-radius: 8px;
            padding: 1em;
        }

        .back {
            color: aliceblue;
            background-color: #616161;
            border-radius: 8px;
            padding: 1em;
            font-family: sans-serif;
            font-size: larger;
            font-weight: bold;
        }

        #back-link {
            text-decoration: none;
            color: chocolate;
        }

        #bottom_bar {
            margin: 20px;
            background-color: #3e2723;
            margin-left: 30px;
            margin-right: 30px;
            border-radius: 8px;
            padding: 1em;
        }
    </style>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-VCMHYS7QJ4');
    </script>
</head>

<body>
    <div class="area" id="area">
        <h2 class="back">
            <%= privacy.title || 'Privacy Policy Title Not Available' %>
        </h2>
        <div class="back">
            <%- privacy.body || 'No body content available.' %>
        </div>
        <p class="back">Time updated: <%= privacy.time || 'N/A' %>
        </p>
        <p class="back">Date updated: <%= privacy.date || 'N/A' %>
        </p>

        <div class="bottom_bar" id="bottom_bar">
            <footer class="footer">
                <center>
                    <a href="/login" id="back-link">Create account</a>
                </center>
            </footer>
        </div>
    </div>

</body>

</html>